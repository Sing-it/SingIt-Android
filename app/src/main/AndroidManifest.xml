<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.software.meister.gsm.singit">

    <application
        android:name=".widget.App"
        android:allowBackup="true"
        android:icon="@drawable/sing_it_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SingIt">
        <activity android:name=".view.activity.PlayListActivity"></activity>
        <activity android:name=".view.activity.SignUpActivity" />
        <activity android:name=".view.activity.LoginActivity"></activity>
        <activity android:name=".view.activity.SongPlayActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.MainActivity"></activity>
    </application>

</manifest>